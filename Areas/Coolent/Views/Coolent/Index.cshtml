@{
    ViewBag.Title = "Index";
}

<div class="row" id="coolentBinding">
    <div class="clearfix">
        <h1 class="pull-left" style=" padding-top: 17px; position: absolute;">Power Steering Oil</h1>
    </div>
    <div class="row searchFilterSection" style="margin-top: 60px;">
        <div class="well" data-bind="with: $root">
            <form class="form-horizontal" data-bind="submit: searchCoolent">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder="<Search>" data-bind="value: searchFilter" />
                </div>

                <div class="col-xs-1">
                    <div id="createButton">
                        <button type="button" class="btn btn-default" data-bind="click: createCoolent">Create New</button>
                    </div>
                </div>
                <button type="submit" class="btn btn-success" data-bind="click: searchCoolent">Search</button>
            </form>
        </div>
    </div>

    <div class="row searchFilterResultSection">
        <div class="well">
            <table id="" class="table table-condensed">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Company</th>
                        <th>Price </th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: coolents">
                    <tr data-bind="click: $root.selectCoolent">
                        <td data-bind="text: powerSterringOilName"></td>
                        <td data-bind="text: powerSterringOilCompany"></td>
                        <td data-bind="text: powerSterringOilPrice"></td>
                        <td>
                            <!-- ko template: { name: 'editTemplate' } -->
                            <!-- /ko -->
                        </td>
                        <td>
                            <!-- ko template: { name: 'deleteTemplate' } -->
                            <!-- /ko -->
                        </td>
                    </tr>
                </tbody>
            </table>
            @Html.Partial("~/Areas/Common/Views/Shared/_Pager.cshtml")

        </div>

    </div>


    <script id="deleteTemplate" type="text/html">
        <a href="#" title="Delete"><span class="glyphicon glyphicon-remove" data-bind="click: $root.onDeleteCoolent"></span></a>
    </script>

    <script id="editTemplate" type="text/html">
        <a href="#" title="Edit in Form"><span class="glyphicon glyphicon-edit" data-bind="click: $root.onEditCoolent"></span></a>
    </script>

    @Html.Partial("_coolentDialog")
</div>

<!-- ko stopBinding: true -->
@Html.Partial("~/Areas/Common/Views/Shared/_ConfirmationDialog.cshtml")
<!-- /ko -->
@section inlinescripts
    {
    <script type="text/javascript">
        //add link in require config
        require(["coolent/coolent.view", "common/confirmation.view"]);
    </script>
}
